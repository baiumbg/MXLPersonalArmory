<Window x:Class="MXLPersonalArmory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MXLPersonalArmory"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Margin="0,0,0,-68">
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="381*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="logBox" IsReadOnly="True" HorizontalAlignment="Left" Height="162" Margin="23,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="737" Grid.Row="1" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Text="{Binding LogBox}"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,205,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Log:" VerticalAlignment="Top" RenderTransformOrigin="-1.189,3.556" Height="34" Width="54" FontSize="20" FontFamily="Yu Gothic UI Semibold"/>

    </Grid>
</Window>
